# Four Against Darkness - Environment Configuration Example
#
# Copy this file to `.env.local` and customize values for your setup.
# This file documents all available environment variables and their use cases.
#
# NOTE: This is an example file. Do not commit `.env.local` to version control.
#       It may contain sensitive information or machine-specific settings.

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================

# Application environment: 'development', 'production', 'staging', 'test'
# Enables debug UI, logging, and error details in development mode
VITE_APP_ENV=development

# Enable verbose logging in browser console
# Use cases: Development debugging, troubleshooting save/load issues
VITE_DEBUG=false

# Enable React StrictMode warnings in development
# Use cases: Development, finding potential React issues
VITE_STRICT_MODE=true

# ============================================================================
# STORAGE & PERSISTENCE
# ============================================================================

# localStorage quota warning threshold (in bytes, default 1MB)
# Warn user when approaching storage limit
# Use cases: Managing browser storage on limited devices
VITE_STORAGE_QUOTA_THRESHOLD=1048576

# Maximum number of auto-save slots to maintain in localStorage
# Older saves are pruned when limit is exceeded
# Use cases: Limiting storage usage, performance on older devices
VITE_MAX_SAVE_SLOTS=10

# Auto-save debounce delay in milliseconds
# Higher values = less frequent saves, better performance
# Lower values = data saved more frequently, safer from loss
# Use cases: Performance tuning on resource-constrained devices
VITE_AUTO_SAVE_DEBOUNCE=1000

# Enable compression for saved game state
# Reduces storage size by ~40-60% at cost of CPU time
# Use cases: Devices with limited storage, many campaigns
VITE_COMPRESS_SAVES=false

# ============================================================================
# FEATURE FLAGS & EXPERIMENTAL FEATURES
# ============================================================================

# Enable Campaign Mode (Phase 6)
# Allows persistent party and equipment across adventures
# Use cases: Long-term campaign play, testing campaign features
VITE_ENABLE_CAMPAIGN_MODE=true

# Enable experimental AI suggestions
# Suggests optimal tactics based on party composition
# Use cases: New player guidance, educational purposes
VITE_ENABLE_AI_SUGGESTIONS=false

# Enable cloud sync (future feature)
# Syncs saves across devices if backend is available
# Use cases: Playing on multiple devices, cloud backup
VITE_ENABLE_CLOUD_SYNC=false

# Cloud API endpoint URL (if cloud sync is enabled)
# Must be a valid HTTPS endpoint
# Use cases: Connecting to backend sync service
VITE_CLOUD_API_URL=https://api.example.com

# ============================================================================
# EXPORT & INTEGRATION
# ============================================================================

# Enable PDF export for character sheets and session logs
# Use cases: Printing campaigns, sharing with other players
VITE_ENABLE_PDF_EXPORT=true

# Enable JSON export for campaign data
# Use cases: Backup, data analysis, transfer between devices
VITE_ENABLE_JSON_EXPORT=true

# Enable CSV export for analytics and statistics
# Use cases: Game statistics, performance tracking, spreadsheet analysis
VITE_ENABLE_CSV_EXPORT=true

# Enable sharing adventure URLs (requires backend)
# Use cases: Sharing ongoing adventures with other players
VITE_ENABLE_URL_SHARING=false

# ============================================================================
# THEME & UI CONFIGURATION
# ============================================================================

# Default theme: 'classic', 'rpgui', 'doodle', 'roguelike-crt'
# Use cases: Different aesthetic preferences, accessibility needs
VITE_DEFAULT_THEME=classic

# Enable theme persistence across sessions
# Use cases: Remembering user preferences
VITE_PERSIST_THEME=true

# Enable high contrast mode for accessibility
# Use cases: Low vision users, accessibility compliance
VITE_HIGH_CONTRAST_MODE=false

# Enable reduced motion mode (respects prefers-reduced-motion)
# Disables animations and transitions
# Use cases: Motion sensitivity, accessibility
VITE_RESPECT_REDUCE_MOTION=true

# ============================================================================
# GAME MECHANICS & BALANCE
# ============================================================================

# Difficulty modifier: 0.75 (easier), 1.0 (normal), 1.25 (harder)
# Scales monster stats and encounter difficulty
# Use cases: Custom difficulty, story vs challenge focus
VITE_DIFFICULTY_MODIFIER=1.0

# Enable optional house rules
# Use cases: Custom rule implementations, variant gameplay
VITE_ENABLE_HOUSE_RULES=false

# Enable random seed for reproducible dungeons
# Set to a number to get same dungeon layout every session
# Use cases: Testing, reproducible scenarios, teaching
VITE_GAME_SEED=

# ============================================================================
# ANALYTICS & TELEMETRY
# ============================================================================

# Enable anonymous usage analytics
# Tracks feature usage but not personal data
# Use cases: Understanding popular features, improving UX
VITE_ENABLE_ANALYTICS=false

# Analytics API endpoint (if enabled)
# Use cases: Connecting to analytics service
VITE_ANALYTICS_API_URL=

# Enable error reporting to external service
# Use cases: Tracking bugs, improving stability
VITE_ENABLE_ERROR_REPORTING=false

# Error reporting API endpoint (if enabled)
VITE_ERROR_REPORTING_URL=

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Enable Redux DevTools browser extension integration
# Use cases: State management debugging, development
VITE_ENABLE_DEVTOOLS=true

# Enable performance profiling in console
# Logs render times and re-render counts
# Use cases: Performance optimization, bottleneck identification
VITE_ENABLE_PROFILING=false

# Mock API responses (for offline development)
# Use cases: Development without backend, testing offline behavior
VITE_MOCK_API=false

# Verbose error messages with stack traces
# Use cases: Development debugging
VITE_VERBOSE_ERRORS=true

# ============================================================================
# TESTING
# ============================================================================

# Run tests in headless mode
# Use cases: CI/CD pipelines, automated testing
VITE_TEST_HEADLESS=true

# Test environment URL
# Use cases: Testing against specific backend
VITE_TEST_API_URL=http://localhost:3000

# Enable test data generation
# Use cases: Load testing, integration tests
VITE_GENERATE_TEST_DATA=false

# ============================================================================
# USAGE EXAMPLES
# ============================================================================

# Example 1: Development Setup
# VITE_APP_ENV=development
# VITE_DEBUG=true
# VITE_VERBOSE_ERRORS=true
# VITE_ENABLE_DEVTOOLS=true
# VITE_ENABLE_PROFILING=false

# Example 2: Production Deployment
# VITE_APP_ENV=production
# VITE_DEBUG=false
# VITE_VERBOSE_ERRORS=false
# VITE_ENABLE_DEVTOOLS=false
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_ERROR_REPORTING=true

# Example 3: Accessibility-Focused Setup
# VITE_HIGH_CONTRAST_MODE=true
# VITE_RESPECT_REDUCE_MOTION=true
# VITE_DEFAULT_THEME=classic
# VITE_ENABLE_AI_SUGGESTIONS=true

# Example 4: Performance-Optimized (Low-End Devices)
# VITE_COMPRESS_SAVES=true
# VITE_AUTO_SAVE_DEBOUNCE=2000
# VITE_ENABLE_PROFILING=false
# VITE_STORAGE_QUOTA_THRESHOLD=524288

# Example 5: Teaching/Educational Setup
# VITE_GAME_SEED=12345
# VITE_ENABLE_AI_SUGGESTIONS=true
# VITE_ENABLE_HOUSE_RULES=true
# VITE_DIFFICULTY_MODIFIER=0.75

# Example 6: Testing & QA
# VITE_APP_ENV=test
# VITE_DEBUG=true
# VITE_MOCK_API=true
# VITE_GENERATE_TEST_DATA=true
# VITE_ENABLE_DEVTOOLS=true
